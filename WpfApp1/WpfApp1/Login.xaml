<Page x:Class="WpfApp1.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid Margin="0,0,0,-0.4" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="247*"/>
            <ColumnDefinition Width="153*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Login" Margin="0.2,10,-0.4,0" VerticalAlignment="Center" FontSize="24" HorizontalAlignment="Center"/>
        <TextBox x:Name="user_name" HorizontalAlignment="Left" Height="23" Margin="0,81,0,-52.8" TextWrapping="Wrap" Text="Enter Name" VerticalAlignment="Center" Width="120" TextChanged="TextBox_TextChanged" TextAlignment="Center"/>
        <Button x:Name="submit_Butt" Content="Submit" HorizontalAlignment="Left" Margin="0,134,0,-101.8" VerticalAlignment="Top" Width="120" Click="Button_Click"/>
    </Grid>
</Page>
