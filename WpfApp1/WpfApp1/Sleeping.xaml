<Page x:Class="WpfApp1.Sleeping"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Sleeping">

    <Grid>
        <Grid Margin="0,0,0,-0.4" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="247*"/>
                <ColumnDefinition Width="153*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Enter hours slept today" Margin="0.2,10,-0.4,0" VerticalAlignment="Center" FontSize="24" HorizontalAlignment="Center"/>
            <TextBox x:Name="Hours_Slept" HorizontalAlignment="Left" Height="23" Margin="60,82,0,-53.8" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" TextChanged="TextBox_TextChanged" TextAlignment="Center"/>
            <Button x:Name="submit_Butt" Content="Submit" HorizontalAlignment="Left" Margin="60,134,0,-101.8" VerticalAlignment="Top" Width="120" Click="Button_Click"/>
        </Grid>

    </Grid>
</Page>
